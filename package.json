{
  "name": "openapi-typescript-validator",
  "version": "1.1.0",
  "description": "Generate typescript with ajv validation based on openapi schemas",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "files": [
    "dist/**/*"
  ],
  "scripts": {
    "build": "tsc",
    "build:watch": "tsc --build --watch",
    "prepublish": "rm -rf dist && npm run build",
    "postpublish": "git push && git push --tags"
  },
  "keywords": [
    "openapi",
    "schema",
    "json schema",
    "typescript",
    "generator",
    "generate",
    "validator",
    "validate",
    "json"
  ],
  "author": "Q42",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Q42/openapi-typescript-validator.git"
  },
  "homepage": "https://github.com/Q42/openapi-typescript-validator",
  "dependencies": {
    "@openapi-contrib/openapi-schema-to-json-schema": "^3.0.4",
    "js-yaml": "^4.0.0",
    "json-schema-to-typescript": "^10.1.3"
  },
  "devDependencies": {
    "@types/js-yaml": "^4.0.0",
    "@types/object-hash": "^1.3.4",
    "prettier": "^2.2.1",
    "typescript": "^4.2.2"
  },
  "peerDependencies": {
    "ajv": "^8.0.0",
    "ajv-formats": "^2.0.0"
  }
}
